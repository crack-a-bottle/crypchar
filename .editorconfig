# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8

[{*.{json,yaml},.git*}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[{*.ts}]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{cjs,esm}/*.js]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[types/*.d.ts]
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false
